        <TextBox x:Name="Tsalida" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left"  TextWrapping="Wrap" Text=" ... " VerticalAlignment="Center" FontSize="10" RenderTransformOrigin="8.694,-5.2" Margin="114,23,0,96.5" Grid.ColumnSpan="2" Height="160" Grid.RowSpan="2" Width="254"/>

    </Grid>
